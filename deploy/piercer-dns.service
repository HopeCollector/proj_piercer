[Unit]
Description=Piercer Internal DNS Server
After=network.target wg-quick@wg0.service
Wants=wg-quick@wg0.service

[Service]
Type=simple
User=root
Group=root
# ↓↓↓ 请根据实际部署路径修改 ↓↓↓
WorkingDirectory=/opt/piercer
# ↓↓↓ 可选：配置 DNS 域名后缀 ↓↓↓
# Environment="PIERCER_DNS_DOMAIN=.vpn.example.com"
ExecStart=/usr/local/bin/uv run python -m piercer.dns_server
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
